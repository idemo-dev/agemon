      { "matcher": "github", "command": "echo gh-1" },
      { "matcher": "github", "command": "echo gh-2" },
      { "matcher": "postgres", "command": "echo pg-1" },
      { "matcher": "postgres", "command": "echo pg-2" },
      { "matcher": "legend-core", "command": "echo legend-1" },
      { "matcher": "legend-core", "command": "echo legend-2" },
      { "matcher": "legend-core", "command": "echo legend-3" },
